# stop activemq on local machine
# kill $(lsof -ti:8161)

# remove container and image if there are exist
docker rm pine-activemq --force
docker image rm pineframework/activemq:latest

# create network interface if there is not exist
docker network create --driver bridge pine_network || true

# create image
docker build -t pineframework/activemq:latest ./resource/docker/activemq

# create container
docker run \
--name pine-activemq \
-p 8161:8161 \
-p 61616:61616 \
-h pine-activemq \
--network=pine_network \
-itd pineframework/activemq:latest

