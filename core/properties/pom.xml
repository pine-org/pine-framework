<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>core</artifactId>
        <groupId>com.pineframework.core</groupId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.pineframework.core.properties</groupId>
    <artifactId>properties</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Properties</name>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <env>development</env>
        <database-vendor>mysql</database-vendor>
        <mq-vendor>activemq</mq-vendor>
    </properties>
    <build>
        <filters>
            <filter>src/main/resources/env/log/log4j-${env}.properties</filter>
            <filter>src/main/resources/env/mq/application-${mq-vendor}-${env}.properties</filter>
            <filter>src/main/resources/env/database/application-${database-vendor}-${env}.properties</filter>
        </filters>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>application-internationalization.properties</include>
                    <include>application-common-${env}.properties</include>
                    <include>application-${database-vendor}.properties</include>
                    <include>application-${mq-vendor}.properties</include>
                    <include>log4j.properties</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>