<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.pineframework.core.properties</groupId>
    <artifactId>properties</artifactId>
    <version>${properties.version}</version>
    <packaging>jar</packaging>
    <name>Properties</name>

    <build>
        <filters>
            <filter>src/main/resources/env/log4j-${env}.properties</filter>
            <filter>src/main/resources/env/application-config-server-${env}.properties</filter>
            <filter>src/main/resources/env/application-activemq-${env}.properties</filter>
            <filter>src/main/resources/env/application-database-${env}.properties</filter>
        </filters>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>*.properties</include>
                    <include>*.json</include>
                    <include>*.sql</include>
                </includes>
            </resource>
        </resources>
    </build>
    <profiles>
        <profile>
            <id>Localhost</id>
            <properties>
                <database.host>localhost</database.host>
                <queue.host>localhost</queue.host>
                <config.server.host>localhost</config.server.host>
            </properties>
        </profile>
        <profile>
            <id>Production</id>
            <properties>
                <env>production</env>
                <build.profile.id>production</build.profile.id>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </profile>
        <profile>
            <id>Development</id>
            <properties>
                <env>development</env>
                <build.profile.id>development</build.profile.id>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </profile>
        <profile>
            <id>UAT</id>
            <properties>
                <env>uat</env>
                <build.profile.id>uat</build.profile.id>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </profile>
        <profile>
            <id>Test</id>
            <properties>
                <env>test</env>
                <build.profile.id>test</build.profile.id>
            </properties>
        </profile>
    </profiles>
</project>