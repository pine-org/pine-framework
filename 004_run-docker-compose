export ESHOP_VERSION=1.0.0-SNAPSHOT

mvn -f ./core-java8/pom.xml clean install -DskipTests=true
mvn -f ./core-security/pom.xml clean install -DskipTests=true
mvn -f ./core-spring/pom.xml clean install -DskipTests=true
mvn -f ./tutorial/pom.xml clean install -DskipTests=true -P Microservices,ConfigServer

docker system prune --force
docker image rm eureka-server:latest
docker image rm config-server:latest
docker image rm eshop:latest
